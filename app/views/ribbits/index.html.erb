<p id="notice"><%= notice %></p>

<h1>Ribbits</h1>

<table>
  <thead>
    <tr>
      <th>Croack</th>
      <th>Frog</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ribbits.each do |ribbit| %>
      <tr>
        <td><%= ribbit.croack %></td>
        <td><%= ribbit.frog.email %></td>
        <td><%= link_to 'Show', ribbit %></td>
        <td><%= link_to 'Edit', edit_ribbit_path(ribbit) %></td>
        <td><%= link_to 'Destroy', ribbit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ribbit', new_ribbit_path %>
